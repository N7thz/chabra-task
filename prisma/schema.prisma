generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Notification {
  id           String   @id @default(uuid())
  message      String
  createdAt    DateTime @default(now()) @map("created_at")
  description  String?
  recipientsId String[]
  recipientsRead String[]
  recipientsDeleted String[]

  @@map("notifications")
}

model User {
  id            String     @id @default(uuid())
  email         String     @unique
  name          String     @unique
  emailVerified Boolean    @default(false)
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @default(now()) @updatedAt @map("updated_at")
  isActive      Boolean    @default(true)
  password      String?
  image         String?
  banned        Boolean?   @default(false)
  banReason     String?
  banExpires    DateTime?
  role          Role       @default(USER)
  sessions      Session[]
  accounts      Account[]
  comments      Comments[]
  spaces        Space[]
  activities    Activity[]

  @@map("users")
}

model Space {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
  user      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String?
  lists     List[]

  @@map("spaces")
}

model List {
  id        String   @id @default(uuid())
  name      String
  color     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
  cards     Card[]
  space     Space?   @relation(fields: [spaceId], references: [id], onDelete: Cascade)
  spaceId   String?

  @@unique([spaceId, name])
  @@map("lists")
}

model Card {
  id          String     @id @default(uuid())
  title       String
  cnpj        String
  description String?
  term        DateTime
  color       String?
  createdAt   DateTime   @default(now()) @map("created_at")
  completedAt DateTime?  @map("completed_at")
  updatedAt   DateTime   @default(now()) @updatedAt @map("updated_at")
  labelId     String?
  ownersId    String[]
  priority    Priority
  status      Status
  label       Label[]
  comments    Comments[]
  tasks       Task[]
  activities  Activity[]
  list        List?      @relation(fields: [listId], references: [id], onDelete: Cascade)
  listId      String?

  @@map("cards")
}

model Label {
  id        String   @id @default(uuid())
  name      String
  color     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
  card      Card?    @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId    String?

  @@map("labels")
}

model Task {
  id        String    @id @default(uuid())
  name      String
  completed Boolean   @default(false)
  term      DateTime?
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @default(now()) @updatedAt @map("updated_at")
  ownersId  String[]
  card      Card?     @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId    String?

  @@map("tasks")
}

model Comments {
  id        String   @id @default(uuid())
  message   String
  author    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
  card      Card?    @relation(fields: [cardId], references: [id], onDelete: Cascade)
  cardId    String?

  @@map("comments")
}

model Activity {
  id        String   @id @default(uuid())
  message   String
  createdAt DateTime @default(now()) @map("created_at")
  author    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  card      Card?    @relation(fields: [cardId], references: [id])
  cardId    String?

  @@map("activities")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  impersonatedBy String?
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@index([identifier])
  @@map("verification")
}

enum Role {
  ADMIN
  USER
  TECHNICIAN
  ANALYST
  SUPERVISOR
}

enum Status {
  PENDING
  IN_PROGRESS
  COMPLETED
}

enum Priority {
  URGENT
  HIGH
  MID
  LOW
}
